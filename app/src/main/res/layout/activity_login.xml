<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:background="#fdfdfd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/toolbarmenu"
            android:backgroundTint="#00000000"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="39dp"
            android:layout_marginLeft="85dp"
            android:layout_gravity="center"
            android:backgroundTint="#00000000"
            android:src="@drawable/texfool" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="32dp"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center|right"
            android:backgroundTint="#00000000"
            android:src="@drawable/toolbarmy" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="매칭이 완료되었습니다."
        android:layout_marginBottom="20dp"
        android:textSize="26sp"
        android:textColor="#ff000000"/>

    <EditText

        android:background="@drawable/edtbox"
        android:backgroundTint="#eeeeee"
        android:id="@+id/et_user"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="닉네임 입력"
        android:textSize="15sp"
        android:maxLines="1"
        android:inputType="text"
        android:maxLength="10"
        android:textColor="#ff000000"/>

    <TextView
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대에게 표시될 닉네임을 \n입력하세요"
        android:textSize="18dp"
        android:textColor="#111111"/>


    <android.widget.Button
        android:layout_marginTop="30dp"
        android:background="@drawable/edtbox"
        android:backgroundTint="#B4E9B3"
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="120dp"
        android:text="접속하기!"
        android:textSize="13sp"
        android:textColor="#ff000000"/>

</LinearLayout>